<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/clientIssuedBooks.css" />
    <link rel="stylesheet" href="/includes/header.css" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <title>
        <%= pageTitle %>
    </title>
</head>

<body>
    <%- include("../includes/header.ejs") %>
        <main class="main-issued2">
            <div class="user_element">
                <form class="searchForm">
                    <input id="search" type="text" name="search" placeholder="Search Users" />
                    <input type="submit" value="Search"></button>
                </form>
            </div>
            <% if (users.length> 0) { %>
                <div class="grid">
                    <% for (let user of users) { %>
                        <section class="issued-book__section">
                            <div class="info">
                                <div class="child_childinfo-user">
                                    <div>
                                        <h6>Email:</h6>
                                        <p>
                                            <%= user.email%>
                                        </p>
                                    </div>
                                    <div>
                                        <h6>PID:</h6>
                                        <p>
                                            <%= user.pid %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="users">
                                <div>
                                    <p>Books Issued:</p>
                                </div>
                                <div class="users_list">
                                    <% if (user.booksIssued.length <=0) { %>
                                        <div>None</div>
                                        <% } else { %>
                                            <div>
                                                <ul>
                                                    <% for (let book of user.booksIssued ) { %>
                                                        <li>
                                                            <%= book.book.title %> - <%= book.time %>
                                                        </li>
                                                        <% } %>
                                                </ul>
                                            </div>
                                            <% } %>
                                </div>
                        </section>
                </div>

                <% } %>
                    <div class="pagination">
                        <% for(let i=1; i <=totalPages; i++) { %>
                            <a href="?search=<%=search%>&page=<%=i%>">
                                <%=i %>
                            </a>
                            <br />
                            <% }%>
                    </div>
                    </div>
                    <% } else { %>
                        <section class="error__section">
                            <h1>No Results</h1>
                            <p>The book you are looking for is not available in our library</p>
                        </section>
                        <% } %>
</body>

</html>