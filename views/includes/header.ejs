<header>
    <div class="logo">SFIT-Virtual Library</div>
    <div class="options">
        <nav>
            <ul>
                <% if (routeFor==="auth" || routeFor==="home" ) { %>
                    <li>
                        <a href="/">Home</a>
                    </li>
                    <li>
                        <a href="/client/userlogin">Student Log-in</a>
                    </li>
                    <li>
                        <a href="/client/usersignup">Student Sign-up<Sign-Up></Sign-Up></a>
                    </li>
                <% } %>

                <% if (routeFor==="client" ) { %>
                    <li>
                        <a href="/client/home">Home Page</a>
                    </li>
                    <li>
                        <form method="post" action="/client/logout" class="logout_form">
                            <button type="submit" class="logout__btn"> Log out </button>
                        </form>
                    </li>
                <% }%>
            </ul>
        </nav>
    </div>
    <div class="menu-toggle">
        <i class="fa fa-bars" aria-hidden="true"></i>
    </div>
</header>
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script defer>
    $(document).ready(function() {
        $('.menu-toggle')
            .click(function() {
                $('nav').toggleClass('active');
            });
    })
</script>
<script defer>
    $document.ready(function() {
        var url = window.location.pathname,
            urlRegExp = new RegExp(url.replace(/\/$/, ''));
        $('li > a').each(function() {
            if(urlRegExp.test(this.href)) {
                $(this).addClass('active');
            }
        });
    });
</script>